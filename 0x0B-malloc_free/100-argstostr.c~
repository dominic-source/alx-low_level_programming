#include "main.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/**
 * artstostr - that concatenates all the arguments of program
 * @ac: argument count
 * @av: argument array
 */
char *argstostr(int ac, char **av)
{
  int i, j, k, l, m;
  char *new_str;
  int len = 0
    
  if (ac == 0 || av == NULL)
    return (NULL);
  new_str = malloc(sizeof(char *));

  if(new_str == NULL)
    return (NULL);
  
  for (i = 0; i < ac; i++)
    {    
      for (j = len; j <= (len + strlen(av[i])); j++)
	{
	  new_str[j] = malloc(sizeof(char));
	  if (new_str[j] == NULL)
	    {
	      free(new_str);
	      for (k = 0; k < j; k++)
		free(new_str[k];
		     return (NULL);
	    }
		 
	}
len += (strlen(av[i]) - 1);
    }

  
  if (new_str == NULL)
    return (NULL);

  for (l = 0; l < strlen(av[l]); l++)
    {
      for (m = len2; m <= (len2 + strlen(av[l])); m++)
        {
          new_str[len2] = av[l][m]  ;
     
        }
      len2 += m
 }

}
