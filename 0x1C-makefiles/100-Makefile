# This program will recompile executable files when there are changes

# The source files
SRC = main.c school.c

# The object files
OBJ = $(SRC:.c=.o)

# The name of the executable
NAME = school

# The compiler to be used
CC = gcc

# GCC flags
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) m.h -o $@

clean:
	$(RM) *~ \.*.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
