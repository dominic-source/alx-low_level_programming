#include "main.h"

/**
 * print_diagsums - print sum of two diagonals of a square matrix of integers.
 * Return: Nothing
 * @a: pointer to an array matrix
 * @size: size of the array
 */
void print_diagsums(int *a, int size)
{
  int i;
  unsigned int sum_l_d;
  unsigned int sum_r_d;
  for(i = 0; i < size; i++)
    {
      printf("%d \n", *(a + ((i * size) + i) * 4));
      sum_l_d += *(a + ((i * size) + i) * 4);
      printf("%d \n", *(a +(((size - i) * size) + (size - i)) * 4));
      sum_r_d += *(a +(((size - i) * size) + (size - i)) * 4);
    }
  printf("%i, %i\n", sum_l_d, sum_r_d);

return;
}
